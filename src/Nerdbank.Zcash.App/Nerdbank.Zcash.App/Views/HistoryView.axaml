          </StackPanel.Styles>
          <Label Content="{Binding TransactionIdCaption}" Target="{Binding #TransactionIdBox}" />
          <TextBox Text="{Binding TransactionId}" Name="TransactionIdBox" />
          <Label Content="{Binding BlockNumberCaption}" Target="{Binding #BlockNumberBox}" />
          <TextBox Text="{Binding BlockNumber}" Name="BlockNumberBox" />
          <Label Content="{Binding WhenCaption}" Target="{Binding #WhenBox}" />
          <TextBox Text="{Binding When}" Name="WhenBox" />
          <Label Content="{Binding OtherPartyNameCaption}" Target="{Binding #OtherPartyNameBox}" />
          <TextBox Text="{Binding OtherPartyName}" Name="OtherPartyNameBox" />
          <Label Content="{Binding AmountCaption}" Target="{Binding #AmountBox}" />
          <local:SecurityAmountDisplay Value="{Binding Amount}" Name="AmountBox" HorizontalAlignment="Left" />
