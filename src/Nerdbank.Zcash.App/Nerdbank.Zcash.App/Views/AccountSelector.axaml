<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Nerdbank.Zcash.App.ViewModels"
             xmlns:local="clr-namespace:Nerdbank.Zcash.App.Views"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="50"
             x:Class="Nerdbank.Zcash.App.Views.AccountSelector"
             x:DataType="vm:ViewModelBaseWithAccountSelector">
  <ComboBox Name="SelectedAccountBox"
            ItemsSource="{Binding Accounts}"
            SelectedItem="{Binding SelectedAccount}"
            IsVisible="{Binding AccountPickerIsVisible}">
    <ComboBox.ItemTemplate>
      <DataTemplate>
        <TextBlock Text="{Binding Name}" />
      </DataTemplate>
    </ComboBox.ItemTemplate>
  </ComboBox>
</UserControl>
